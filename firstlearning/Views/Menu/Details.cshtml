@model firstlearning.Models.Dish
@{
    ViewData["Title"] = "Details";
}

<div class ="container">
    <div class="d-flex justify-content-center">
        <h3>
            @Model.Name
        </h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" alt="brass fish" style="width: 50%;" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") AUS Dollars
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach (var item in Model.DishIngredients)
            {
                <li>
                    @item.ingredient.Name
                </li>
            }
        </ul>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-info" asp-action="Index">Back</a>
    </div>
</div>